{
  "extends": "airbnb",
  "settings": {
    "import/resolver": {
      "webpack": {
         "config": "./tools/webpack/webpack.config.js"
      }
    }
  },
  "env": {
    "browser": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": [
      "warn",
      { "aspects": ["invalidHref"] }
    ]
  }
}
